<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with
            field='resource'
            type='org.parallax3d.parallax.tests.resources.DemoResources' />

    <ui:style>

        .dataPanel {
            padding: 20px;
        }

        .name {
            font-size: 20px;
            font-weight: 500;
            padding-bottom: 10px;
        }

        .buttonPanel {
            border-top: 1px solid rgba(160, 160, 160, 0.2);
            padding: 20px;
        }

        .button {
            background: none !important;
            border: none;
            cursor: pointer;
            color: #ffab40;
            margin-right: 20px;
            text-transform: uppercase;

            -webkit-transition: color 0.3s ease;
            -moz-transition: color 0.3s ease;
            -o-transition: color 0.3s ease;
            -ms-transition: color 0.3s ease;
            transition: color 0.3s ease;
        }

        .button:hover {
            color: #ffd8a6;
        }

        .button:focus {
            outline: none;
        }

        .author {
            padding-top: 5px;
        }

        .author a {
            color: black;
        }

    </ui:style>

    <g:FlowPanel>

        <g:FlowPanel stylePrimaryName="{style.dataPanel}">
            <g:Label ui:field="name" stylePrimaryName="{style.name}"/>

            <g:Label ui:field="description"/>

            <g:HTMLPanel ui:field="author" stylePrimaryName="{style.author}"/>
        </g:FlowPanel>

        <g:FlowPanel stylePrimaryName="{style.buttonPanel}">
            <g:Button ui:field='switchAnimation' stylePrimaryName="{style.button}">Pause</g:Button>
            <g:Button ui:field='switchFullScreen' stylePrimaryName="{style.button}">Fullscreen</g:Button>
        </g:FlowPanel>

    </g:FlowPanel>

</ui:UiBinder>