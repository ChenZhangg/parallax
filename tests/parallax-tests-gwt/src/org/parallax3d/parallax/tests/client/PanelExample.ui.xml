<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:c="urn:import:com.google.gwt.user.cellview.client"
  xmlns:m="urn:import:org.parallax3d.parallax.tests.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateLocales='default'>

  <ui:style>  
    .menu {
      background-color: #d7dde8;
      border-right: 1px solid #c3c3c3;
    }
  </ui:style>

	<g:DockLayoutPanel unit='PX'>
		<!-- Main menu tree. -->
		<g:lineStart size='225'>
			<g:ScrollPanel styleName='{style.menu}'>
				<c:CellTree ui:field='menu' />
			</g:ScrollPanel>
		</g:lineStart>

		<!-- Main content area. -->
		<g:center>
			<g:DockLayoutPanel unit='PX'>
				<g:north size="65">
					<m:PanelButtons ui:field='buttons' />
				</g:north>

				<g:center>
					<g:SimpleLayoutPanel ui:field='content' />
				</g:center>

			</g:DockLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>