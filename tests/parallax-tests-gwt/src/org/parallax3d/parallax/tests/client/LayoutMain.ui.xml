<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:m="urn:import:org.parallax3d.parallax.tests.client"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style>

		.menu {
			padding: 20px;
		}

		.dock {
			background-color: #2196F3 !important;
			padding: 20px;
		}

	</ui:style>

	<g:DockLayoutPanel unit='PX'>
		<!-- Main menu tree. -->
		<g:west size='280'>
			<g:FlowPanel>
				<g:SimplePanel>
					<m:LayoutDock ui:field='docked' styleName="{style.dock}"/>
				</g:SimplePanel>
				<g:ScrollPanel height="90%">
					<g:VerticalPanel ui:field='menu' styleName="{style.menu}"/>
				</g:ScrollPanel>
			</g:FlowPanel>
		</g:west>

		<!-- Main content area. -->
		<g:center>
			<g:SimpleLayoutPanel ui:field='content' />
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 