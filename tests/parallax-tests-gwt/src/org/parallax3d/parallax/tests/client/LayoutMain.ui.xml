<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:m="urn:import:org.parallax3d.parallax.tests.client"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<ui:style>

	.menu {
		background-color: #d7dde8;
		border-right: 1px solid #c3c3c3;
	}

	</ui:style>

	<g:DockLayoutPanel unit='PX'>
		<!-- Main menu tree. -->
		<g:lineStart size='225'>
			<g:VerticalPanel ui:field='bottonPanel'>
				<m:LayoutDock ui:field='docked' />
				<g:ScrollPanel styleName='{style.menu}'>
					<c:CellTree ui:field='menu' />
				</g:ScrollPanel>
			</g:VerticalPanel>
		</g:lineStart>

		<!-- Main content area. -->
		<g:center>
			<g:SimpleLayoutPanel ui:field='content' />
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder> 